@model IEnumerable<TT.Models.Course>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/css/technoWireless.css" rel="stylesheet" />

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Content/js/technoWireless.js"></script>

<h2>Courses</h2><hr />
<div class="row">
    <a class="btn btn-primary pull-right create-btn" href='@Url.Action("Create")'>Create New</a>
</div>
<div class="row table-header">
    <div class="col-md-5">Course Name</div>
    <div class="col-md-5"></div>
</div>

@foreach (var item in Model)
{

    <div class="row table-data">
        <div class="col-md-5">@Html.DisplayFor(modelItem => item.CourseName)</div>
            <div class="col-md-5">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                <a data-toggle="modal" data-target="#exampleModal" data-id="@item.Id" class="delete-item-modal">Delete</a>
            </div>
        </div>
}






<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Course</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input hidden class="item-id" value="" />
                Are you sure you want to delete this course ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" onclick="Delete()">Yes</button>
            </div>
        </div>
    </div>
</div>
